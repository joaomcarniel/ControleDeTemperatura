@using EdicoesEmMassa.Model
@model IncubadoraModel 
@{
    ViewData["Title"] = "Cadastrar Incubadora";
}
<div class="text-center">
  
    <h1 class="display-4">Cadastrar Incubadora</h1>
    
</div>

<form asp-controller="Incubadora" asp-action="Creating" method="post">
  <div class="form-group">
    <label for="codIncubadora">Código da Incubadora</label>
    <input type="text" asp-for="cod_incubadora" class="form-control" placeholder="Digite o código da Incubadora">
    @Html.ValidationMessageFor(x => x.cod_incubadora)
  </div>
  <div class="form-group">
    <label for="tempAtualFixada">Temperatura Atual Fixada</label>
    <input type="text" asp-for="temperatura_fixada" class="form-control" placeholder="Digite a temperatura atual em que a Incubadora está trabalhando agora">
    @Html.ValidationMessageFor(x => x.temperatura_fixada)
  </div>
  <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Incubadora" asp-action="Index" role="button">Voltar</a>
</form>



