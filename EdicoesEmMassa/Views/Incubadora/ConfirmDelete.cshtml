@using EdicoesEmMassa.Model
@model IncubadoraModel 
@{
    ViewData["Title"] = "Confirmação de Deleção";
}
<div class="text-center">
  
    <h3>Realmente deseja apagar a incubadora @Model.cod_incubadora?</h3>
    
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Incubadora" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.id_incubadora" asp-controller="Incubadora" asp-action="Delete">Confirmar Exclusão</a>