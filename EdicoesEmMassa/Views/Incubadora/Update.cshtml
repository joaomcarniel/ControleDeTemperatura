@using EdicoesEmMassa.Model
@model IncubadoraModel 
@{
    ViewData["Title"] = "Editar Incubadora";
}
<div class="text-center">
  
    <h1 class="display-4">Editar Incubadora</h1>
    
</div>

<form asp-controller="Incubadora" asp-action="Update" method="post">
  <input type="hidden" asp-for="IdIncubadora" />
  <div class="form-group">
    <label for="codIncubadora">Código da Incubadora</label>
    <input type="text" asp-for="CodIncubadora" class="form-control" placeholder="Digite o código da Incubadora">
    @Html.ValidationMessageFor(x => x.CodIncubadora)  
  </div>
  <div class="form-group">
    <label for="tempAtualFixada">Temperatura Atual Fixada</label>
    <input type="text" asp-for="TemperaturaFixada" class="form-control" placeholder="Digite a temperatura atual em que a Incubadora está trabalhando agora">
    @Html.ValidationMessageFor(x => x.TemperaturaFixada)  
  </div>
  <button type="submit" class="btn btn-primary btn-block">Alterar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Incubadora" asp-action="Index" role="button">Voltar</a>
</form>



